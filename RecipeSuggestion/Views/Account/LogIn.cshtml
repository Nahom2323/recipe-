@model LogInViewModel

        <h1 class="jumbotron">Login</h1>
        <form method="post">
            <div class="form-group row">
                <div class="col-sm-2"><label>Email Address:</label></div>
                <div class="col-sm-4">
                    <input placeholder="Jsmith123@gmail.com" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2"><label>Password:</label></div>
                <div class="col-sm-4">
                    <input class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="offset-2 col-sm-4">
                    <button type="submit" class="btn btn-primary">
                        Log In
                    </button>
                </div>
            </div>

            <div class="row">
                <div class="offset-2 col-sm-4">
                    <a asp-controller="Account" asp-action="SignUp" class="btn btn-success">Create New Account</a>
                </div>
            </div>

            <div class="row">
                <div class="offset-2 col-sm-4">
                    Forget Password?
                    <a asp-action="">Reset Password</a>
                </div>
            </div>
        </form>