@model LogInViewModel
@{
    ViewBag.Title = "Log In";
}

<h1>Login</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-controller="Account" style="font-size:x-large" asp-action="LogIn"  asp-route-returnUrl="@Model.ReturnUrl">
    <div class="form-group row">
        <div class="col-sm-2"><label>Username:</label></div>
        <div class="col-sm-4">
            <input asp-for="EmailAddress" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="EmailAddress"
                  class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2"><label>Password:</label></div>
        <div class="col-sm-4">
            <input type="password" asp-for="Password"
                   class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Password"
                  class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-2">
            <input type="checkbox" title="Remember Me" asp-for="RememberMe" class="form-check" style="width:30px; height:30px;" />
        </div>
        <div class="col">
            <label>Remember Me</label>
        </div>        
    </div>

    <div class="row mb-3">
        <div class="offset-2 col">
            <button type="submit" class="btn btn-primary">
                Log In
            </button>
        </div>
    </div>

    <div class="row">
        <div class="offset-2 col">
            Not registered?
            <a asp-controller="Account" asp-action="SignUp">Register as a new user</a>
        </div>
    </div>
</form>
