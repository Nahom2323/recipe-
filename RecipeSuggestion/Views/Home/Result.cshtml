@model List<ShortRecipe>
<div class="container">
       @foreach (ShortRecipe recipe in Model)
           {
            <div class="thumbnail card shadow mb-5">
                <div class="clearfix">
                    <img src="@recipe.Image" alt="@recipe.Title" style="width:30%" class="float-left mr-2">
                    <h5 class="mt-3">@recipe.Title</h5>
                    <p class="mt-3"><strong>Missed Ingredients:</strong>
                        @foreach (Ingredient ingredient in recipe.MissedIngredients)
                        {
                            @ingredient.Name <span>, </span>
                        }
                    </p>                            
                    <p class="mt-3"><strong>Used Ingredients:</strong>
                        @foreach (Ingredient ingredient in recipe.UsedIngredients)
                        {
                            @ingredient.Name <span>, </span>
                        }
                    </p>
                </div>
            </div>
           }
</div>