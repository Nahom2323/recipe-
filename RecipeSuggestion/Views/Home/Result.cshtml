@model List<ShortRecipe>
<div class="container">
    @foreach (ShortRecipe recipe in Model)
    {
        <div class="thumbnail card shadow mb-5">
            <div class="clearfix">
                <img src="@recipe.Image" alt="@recipe.Title" style="width:30%" class="float-left mr-2">
                <h5 class="mt-3">@recipe.Title</h5>
                <p class="mt-3">
                    <strong>Missed Ingredients:</strong>
                    @for (var i = 0; i < recipe.MissedIngredients.Count; i++)
                    {
                        @recipe.MissedIngredients[i].Name
                        @if (i < recipe.MissedIngredients.Count - 1)
                        {
                            <span>,</span>
                        }
                    }
                </p>
                <p class="mt-3">
                    <strong>Used Ingredients:</strong>
                    @for (var i = 0; i < recipe.UsedIngredientCount; i++)
                    {
                        @recipe.UsedIngredients[i].Name
                        @if (i < recipe.UsedIngredients.Count - 1)
                        {
                            <span>,</span>
                        }
                    }
                </p>
            </div>
        </div>
    }
</div>