@model List<Recipe>
<div class="container">
        
            @*Use foreach to get recipe automatically*@
            @foreach (Recipe recipe in Model)
            {
                <div class="thumbnail card shadow mb-5">
                <div class="clearfix">
                    <img src="@recipe.Image" alt="@recipe.Title" style="width:30%" class="float-left mr-2">
                    <h5 class="mt-3">@recipe.Title</h5>
                    <p class="mt-3"><strong>Ingredients:</strong> </p>
                        @*@foreach (ExtendedIngredient ingredient in @recipe.ExtendedIngredients)
                                                     {
                                                         <p>@ingredient.Name</p>
                                                     }*@
                                                     
                    <p class="mt-3"><strong>Cusine:</strong>@recipe.Cuisines</p>
                </div>
            </div>
            }
</div>