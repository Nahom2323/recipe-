@model List<Recipe>
<div class="container">
       @foreach (Recipe recipe in Model)
           {
               <div class="thumbnail card shadow mb-5">
                <div class="clearfix">
                    <img src="@recipe.Image" alt="@recipe.Title" style="width:30%" class="float-left mr-2">
                    <h5 class="mt-3">@recipe.Title</h5>
                    <p class="mt-3"><strong>Ingredients:</strong>
                       @foreach (ExtendedIngredient ingredient in recipe.ExtendedIngredients)
                      {
                          @ingredient.Name
                      }
                    </p>                            
                    <p class="mt-3"><strong>Cusine:</strong>
                    @foreach (string cuisine in recipe.Cuisines)
                   {
                       @cuisine
                   }    
                    </p>
                </div>
            </div>
           }
</div>