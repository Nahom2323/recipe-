@model List<Recipe>
<h1>Recently view</h1>

<!-- Back-end processing, please contact Huy before modifing -->
@{
    // if there is actually at least 1 recipe
    if (Model != null)
    {
        if (Model.Count > 0)
        {
            foreach (Recipe recipe in Model)
            {
                <a asp-action="Detail" asp-route-recipeId=@recipe.Id>@recipe.Title</a>
                // HTML code here
            }
        }
        // in case no recipes are in recently viewed list
        else
        {
            <p class="alert alert-primary" role="alert">No recently viewed recipes.</p>
        }

    }
}
