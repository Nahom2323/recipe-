<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - RecipeSuggestion</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css"/>
        <link rel="stylesheet" href="~/css/headerFooter.css"/>
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a  asp-controller="Home" asp-action="Index"><img src="~/Images/logo.png" alt="logo" id="homeLogo"/></a>
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Recipe Suggestion</a>
                    
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between navbar-text">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">About</a>
                            </li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Contact Us</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Sign Up</a></li>
                            <li class="nav-item"><a class="btn btn-outline-primary" role="button" asp-controller="Account" asp-action="LogIn">Log In</a></li>
                            <li class="nav-item"><a class="btn btn-outline-secondary" role="button" asp-controller="Home" asp-action="Index">Account</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2022 - RecipeSuggestion
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
